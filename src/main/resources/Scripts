CREATE SEQUENCE STARTER_SEQ INCREMENT BY 1 START WITH 500;

DROP TABLE STARTER_PERSON;

CREATE TABLE STARTER_PERSON 
(
  P_ID NUMBER NOT NULL 
, P_NAME VARCHAR2(50 BYTE) 
, P_SN VARCHAR2(50 BYTE) 
, CONSTRAINT STARTER_PERSON_PK PRIMARY KEY 
  (
    P_ID 
  )
);

INSERT INTO STARTER_PERSON (P_ID, P_NAME, P_SN) VALUES (1, 'PERSON1', 'SURNAME1');
INSERT INTO STARTER_PERSON (P_ID, P_NAME, P_SN) VALUES (2, 'PERSON2', 'SURNAME2');
INSERT INTO STARTER_PERSON (P_ID, P_NAME, P_SN) VALUES (3, 'PERSON3', 'SURNAME3');
INSERT INTO STARTER_PERSON (P_ID, P_NAME, P_SN) VALUES (4, 'PERSON4', 'SURNAME4');
INSERT INTO STARTER_PERSON (P_ID, P_NAME, P_SN) VALUES (5, 'PERSON5', 'SURNAME5');


--AUDIT RELATED CHANGES

DROP TABLE STARTER_PERSON_AUDIT_LOG;

CREATE TABLE STARTER_PERSON_AUDIT_LOG 
(
  P_ID NUMBER NOT NULL 
, REV NUMBER NOT NULL 
, REVTYPE NUMBER 
, P_NAME VARCHAR2(50 BYTE) 
, P_SN VARCHAR2(50 BYTE) 
, CONSTRAINT STARTER_PERSON_AUDIT_LOG_PK PRIMARY KEY 
  (
    P_ID 
  , REV 
  )
);

DROP TABLE REVINFO;

CREATE TABLE REVINFO 
(
  REV NUMBER NOT NULL 
, REVTSTMP NUMBER 
, CONSTRAINT REVINFO_PK PRIMARY KEY 
  (
    REV 
  )
);

ALTER TABLE STARTER_PERSON_AUDIT_LOG
ADD CONSTRAINT FK_STARTER_PERSON_AUDIT_LOG FOREIGN KEY
(
  REV 
)
REFERENCES REVINFO
(
  REV 
)
;

-- END FOR AUDIT


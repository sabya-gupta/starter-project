-- THREAD SYNC WITH DB 

DROP TABLE STARTER_THREAD_SYNC;

CREATE TABLE STARTER_THREAD_SYNC 
(
  SYNC_PK NUMBER NOT NULL 
, V_LOCK_NAME VARCHAR2(20) NOT NULL 
, V_THREAD_NAME VARCHAR2(20) 
, C_SYNC_LOCK_STAUS CHAR(1) NOT NULL 
, CONSTRAINT STARTER_THREAD_SYNC_PK PRIMARY KEY 
  (
    SYNC_PK 
  )
);

Insert into STARTER_THREAD_SYNC (SYNC_PK,V_LOCK_NAME,V_THREAD_NAME,C_SYNC_LOCK_STAUS) values (1,'STARTER-LOCK-1',null,'N');
-- END THREAD SYNC WITH DB 
